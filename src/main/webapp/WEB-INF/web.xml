<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <error-page>
        <error-code>404</error-code>
        <location>/error</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/error</location>
    </error-page>
    <error-page>
        <error-code>600</error-code>
        <location>/error</location>
    </error-page>
    <error-page>
        <error-code>601</error-code>
        <location>/error</location>
    </error-page>

    <error-page>
        <error-code>602</error-code>
        <location>/error</location>
    </error-page>


    <error-page>
        <exception-type>com.vladnickgofj.hotel.service.exception.InvalidEmailException</exception-type>
        <location>/error</location>
    </error-page>
    <error-page>
        <exception-type>com.vladnickgofj.hotel.service.exception.AuthorisationFailException</exception-type>
        <location>/error</location>
    </error-page>
    <error-page>
        <exception-type>com.vladnickgofj.hotel.service.exception.InvalidPasswordException</exception-type>
        <location>/error</location>
    </error-page>
    <error-page>
        <exception-type>com.vladnickgofj.hotel.dao.exception.registerPageExceptions.RegisterPageInvalidConfirmationPassword</exception-type>
        <location>/error</location>
    </error-page>
    <error-page>
        <exception-type>com.vladnickgofj.hotel.dao.exception.registerPageExceptions.RegisterPageEmailErrorException</exception-type>
        <location>/error</location>
    </error-page>
    <error-page>
        <exception-type>com.vladnickgofj.hotel.dao.exception.registerPageExceptions.RegisterPageFirstNameErrorException</exception-type>
        <location>/error</location>
    </error-page>
    <error-page>
        <exception-type>com.vladnickgofj.hotel.dao.exception.registerPageExceptions.RegisterPageLastNameErrorException</exception-type>
        <location>/error</location>
    </error-page>
    <error-page>
        <exception-type>com.vladnickgofj.hotel.dao.exception.registerPageExceptions.RegisterPagePasswordErrorException</exception-type>
        <location>/error</location>
    </error-page>
    <error-page>
        <exception-type>com.vladnickgofj.hotel.dao.exception.registerPageExceptions.RegisterPageConfirmationPasswordErrorException</exception-type>
        <location>/error</location>
    </error-page>
    <error-page>
        <exception-type>com.vladnickgofj.hotel.dao.exception.registerPageExceptions.RegisterPageEntityAlreadyExistException</exception-type>
        <location>/error</location>
    </error-page>
    <error-page>
        <exception-type>com.vladnickgofj.hotel.dao.exception.loginPageExceptions.LoginPageEmailErrorException</exception-type>
        <location>/error</location>
    </error-page>


</web-app>